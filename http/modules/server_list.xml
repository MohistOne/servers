<html xmlns:t="http://twistedmatrix.com/ns/twisted.web.template/0.1">
<head>
    <title>Server Starting and Stopping site</title>

    <!-- Bootstrap core CSS -->
    <link href="../static/bootstrap-3.2.0-dist/css/bootstrap.min.css" rel="stylesheet"/>

    <!-- Custom styles for this template -->
    <link href="../static/starter-template.css" rel="stylesheet"/>

    <!-- Just for debugging purposes. Don't actually copy these 2 lines! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <script src="../static/bootstrap-3.2.0-dist/js/ie-emulation-modes-warning.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
</head>


<body>
  <div class="container">
    <div class="tabbable">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#all_servers" data-toggle="tab">All Servers</a></li>
            <li><a href="#favourite_servers" data-toggle="tab">Favourite Servers</a></li>
		</ul>
        <div class="tab-content">
            <div id="all_servers" class="tab-pane active">
                <h2>All Servers</h2>
                    <ul class="list-group">
                    <li  class="list-group-item" t:render='server_entries'>
                        <t:slot name='servername'/>
                        <div class="pull-right"><span class="btn-group">
                            <button type = "button"><t:attr name = "class"><t:slot name="starter_class"/></t:attr><t:attr name="value"><t:slot name='servername'/></t:attr><t:slot name='starter_text' /></button>
                            <button type = "button"><t:attr name = "class"><t:slot name="stopper_class"/></t:attr><t:attr name="value"><t:slot name='servername'/></t:attr>Stop</button>
                        </span></div>
                    </li>
                    </ul>
            </div>
            <div id="favourite_servers" class="tab-pane">
                <h2>Favourite Servers</h2>
                <p>Placed as key: node_name in ['','Servers','Server List']</p>
                <ul class="list-group">
                    <li  class="list-group-item" t:render='favourite_entries'>
                        <t:slot name='favourite_name'/>
                        <div class="pull-right"><span class="btn-group">
                            <button type = "button"><t:attr name = "class"><t:slot name="starter_class"/></t:attr><t:attr name="value"><t:slot name='favourite_name'/></t:attr><t:slot name='starter_text' /></button>
                            <button type = "button"><t:attr name = "class"><t:slot name="stopper_class"/></t:attr><t:attr name="value"><t:slot name='favourite_name'/></t:attr>Stop</button>
                        </span></div>
                    </li>
                </ul>

                </div>
        </div><!-- /.tab-content--> 
    </div><!-- /.tabbabble -->
  </div>
    <!-- Importing of Stuff-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../static/bootstrap-3.2.0-dist/js/bootstrap.min.js"></script>
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
    <script src="../static/custom_server_buttons.js"></script>
</body>
</html>
